#!/bin/sh
# postrm script for shaarli
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

apache_remove() {
	if [ -d /etc/$webserver/conf.d ] && [ -L /etc/$webserver/conf.d/shaarli.conf ]; then
		rm -f /etc/$webserver/conf.d/shaarli.conf
	fi
}

case "$1" in
    remove)
        webservers="apache2, " #TODO: Add other servers
	    for webserver in $webservers; do
		    webserver=${webserver%,}
		    if [ "$webserver" = "apache2" ] && [ -f /etc/init.d/$webserver ] ; then
                apache_remove $webserver
		    #else
			#    # TODO: Handle other servers
		    fi
		    # Reload webserver
		    # Redirection of 3 is needed because Debconf uses it and it might 
		    # be inherited by webserver. See bug #446324.
		    if [ -f /etc/init.d/$webserver ] ; then
			    if [ -x /usr/sbin/invoke-rc.d ]; then
				    invoke-rc.d $webserver reload 3>/dev/null || true
			    else
				    /etc/init.d/$webserver reload 3>/dev/null || true
			    fi
		    fi
        done
		# Delete temporary files
	    rm -rf /var/cache/shaarli/tmp
    ;;
		
    purge)
        # Remove the data and cached files
	    rm -rf /var/lib/shaarli /var/cache/shaarli
    ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
